server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name {{ item.domain }};

    root /srv/app/{{ item.name }}_{{ item.type }}/static;

    # SSL
    ssl_certificate /etc/letsencrypt/live/{{ item.root_domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ item.root_domain }}/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/{{ item.root_domain }}/chain.pem;

    # security
    include shared-config/security.conf;

    # reverse proxy
    location / {
        proxy_pass http://127.0.0.1:{{ item.proxy_port }};
        include shared-config/proxy.conf;
    }

    # additional config
    include shared-config/general.conf;
}

# HTTP redirect
server {
    listen 80;
    listen [::]:80;

    server_name {{ item.domain }};

    location / {
        return 301 https://{{ item.domain }}$request_uri;
    }
}
